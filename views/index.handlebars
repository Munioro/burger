<div class="container">
  <div class="row">
    <div class="col-5"></div>
    <div class="col-4">
      <h1>Burgers!</h1>
    </div>

  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-5 notdev">
      <h2>Burgers that are not devoured!</h2>

      <ol class="burgers">
        {{#each burger}}
          {{#unless devoured}}
            {{> burger/burger-block devoured=false}}
          {{/unless}}
        {{/each}}
      </ol>

    </div>

    <div class="col-sm-2">
      <i class="fas fa-hamburger fa-9x"></i>
      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="burg">Burger Name:</label>
          <input type="text" id="burg" name="burger_name">
        </div>

        <button class="btn btn-secondary" type="submit">Add Burger</button>
      </form>

    </div>
    <div class="col-sm-5 devrd">
      <h2>Burgers that are devoured!</h2>

      <ol class="burgers">
      {{#each burger}}
        {{#if devoured}}
          {{> burger/burger-block devoured=true}}
        {{/if}}
      {{/each}}
      </ol>
    </div>
  </div>


</div>